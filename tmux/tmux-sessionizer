#choose project directory
if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$(find ~/dev ~/sa -mindepth 1 -maxdepth 1 -type d | fzf)
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)
session_name="projects"   # fixed session to hold all windows
tmux_running=$(pgrep tmux)

# If tmux isn't running at all, start a session with first window
if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s "$session_name" -n "$selected_name" -c "$selected"
    exit 0
fi

# Make sure the main session exists
if ! tmux has-session -t "$session_name" 2>/dev/null; then
    tmux new-session -ds "$session_name"
fi

# If window already exists â†’ just select it
if tmux list-windows -t "$session_name" -F "#{window_name}" | grep -qx "$selected_name"; then
    if [[ -z $TMUX ]]; then
        tmux attach-session -t "$session_name" \; select-window -t "$selected_name"
    else
        tmux switch-client -t "$session_name" \; select-window -t "$selected_name"
    fi
    exit 0
fi

# Otherwise create a new window and switch to it
tmux new-window -t "$session_name" -n "$selected_name" -c "$selected"
if [[ -z $TMUX ]]; then
    tmux attach-session -t "$session_name" \; select-window -t "$selected_name"
else
    tmux switch-client -t "$session_name" \; select-window -t "$selected_name"
fi

